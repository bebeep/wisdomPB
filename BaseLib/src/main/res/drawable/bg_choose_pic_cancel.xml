<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/c_line"></stroke>
            <solid android:color="@color/c_white"></solid>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/c_alpa"></stroke>
            <solid android:color="@color/c_qing"></solid>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>