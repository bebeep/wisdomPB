<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_line"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/layout_title" />


        <FrameLayout
            android:id="@+id/fl_edit_psw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_fl_click"
            android:onClick="@{onClickListener}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="修改密码"
                android:textColor="@color/c_sblack"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_arrow_right" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/fl_notice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_fl_click"
            android:onClick="@{onClickListener}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="免责声明"
                android:textColor="@color/c_sblack"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_arrow_right" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_fl_click"
            android:onClick="@{onClickListener}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="清除缓存"
                android:textColor="@color/c_sblack"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:text="2.13 M"
                android:textColor="@color/c_gray"
                android:textSize="14sp" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/fl_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_fl_click"
            android:onClick="@{onClickListener}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="版本更新"
                android:textColor="@color/c_sblack"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:text="已是最新版本"
                android:textColor="@color/c_blue"
                android:textSize="14sp" />
        </FrameLayout>
    </LinearLayout>
</layout>

