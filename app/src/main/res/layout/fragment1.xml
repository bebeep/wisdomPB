<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_line">


        <include
            android:id="@+id/title"
            layout="@layout/layout_title" />


        <cn.appsdream.nestrefresh.normalstyle.NestRefreshLayout
            android:id="@+id/nrl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp">


            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/srl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.youth.banner.Banner
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="180dp" />


                        <HorizontalScrollView
                            android:id="@+id/hs"
                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            android:layout_marginTop="2dp"
                            android:overScrollMode="never"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_f1_t1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_fl_click"
                                    android:gravity="center"
                                    android:onClick="@{onClickListener}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/icon_f1_t1" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="图书馆"
                                        android:textColor="@color/c_sblack"
                                        android:textSize="13sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_f1_t2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_fl_click"
                                    android:gravity="center"
                                    android:onClick="@{onClickListener}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/icon_f1_t2" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="党组织活动"
                                        android:textColor="@color/c_sblack"
                                        android:textSize="13sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_f1_t3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_fl_click"
                                    android:gravity="center"
                                    android:onClick="@{onClickListener}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/icon_f1_t3" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="党内公示"
                                        android:textColor="@color/c_sblack"
                                        android:textSize="13sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_f1_t4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_fl_click"
                                    android:gravity="center"
                                    android:onClick="@{onClickListener}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/icon_f1_t4" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="党费缴纳"
                                        android:textColor="@color/c_sblack"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_f1_t5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_fl_click"
                                    android:gravity="center"
                                    android:onClick="@{onClickListener}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/icon_f1_t5" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="党建通讯录"
                                        android:textColor="@color/c_sblack"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_f1_t6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_fl_click"
                                    android:gravity="center"
                                    android:onClick="@{onClickListener}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/icon_f1_t6" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="党建相册"
                                        android:textColor="@color/c_sblack"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_f1_t7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_fl_click"
                                    android:gravity="center"
                                    android:onClick="@{onClickListener}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/icon_f1_t8" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="专题教育"
                                        android:textColor="@color/c_sblack"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_f1_t8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_fl_click"
                                    android:gravity="center"
                                    android:onClick="@{onClickListener}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/icon_f1_t7" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="通知公告"
                                        android:textColor="@color/c_sblack"
                                        android:textSize="14sp" />

                                </LinearLayout>
                            </LinearLayout>
                        </HorizontalScrollView>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@color/c_white">

                            <android.support.design.widget.TabLayout
                                android:id="@+id/tab_f1_title"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@color/c_white"
                                app:tabIndicatorColor="@color/theme_d"
                                app:tabMode="fixed"
                                android:overScrollMode="never"
                                app:tabSelectedTextColor="@color/theme_d"
                                app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
                                app:tabTextColor="@color/c_sblack" />
                        </FrameLayout>

                        <android.support.v4.view.ViewPager
                            android:id="@+id/vp_FindFragment_pager"
                            android:overScrollMode="never"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@color/c_white"
                            android:nestedScrollingEnabled="false" />

                        <TextView
                            android:id="@+id/tv_empty"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="该分类下暂无内容"
                            android:gravity="center"
                            android:textColor="@color/c_gray"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </android.support.v4.widget.SwipeRefreshLayout>


        </cn.appsdream.nestrefresh.normalstyle.NestRefreshLayout>


    </FrameLayout>

</layout>
